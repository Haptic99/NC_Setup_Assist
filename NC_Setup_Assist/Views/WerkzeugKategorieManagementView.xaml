<UserControl x:Class="NC_Setup_Assist.Views.WerkzeugKategorieManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NC_Setup_Assist.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock DockPanel.Dock="Top" 
                       Text="Kategorien verwalten" 
                       Style="{StaticResource HeaderTextStyle}"
                       FontSize="16"/>

            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,10,0,0">
                <TextBox Text="{Binding NewKategorieName, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource BaseTextBoxStyle}"
                         Width="200" Margin="0,0,10,0"
                         ToolTip="Name der neuen Hauptkategorie"/>
                <Button Content="Hinzufügen" 
                        Command="{Binding AddKategorieCommand}" 
                        Style="{StaticResource AccentButton}"
                        Width="100" Margin="0,0,5,0"/>
                <Button Content="Löschen" 
                        Command="{Binding DeleteKategorieCommand}" 
                        Style="{StaticResource SecondaryButton}"
                        Width="100"/>
            </StackPanel>

            <ListView ItemsSource="{Binding Kategorien}" 
                      SelectedItem="{Binding SelectedKategorie}" 
                      AlternationCount="2">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#EEEEEE"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F8F8F8"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E0F0FF"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding WerkzeugKategorieID}" Width="50"/>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="250"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#EEEEEE"/>

        <DockPanel Grid.Column="2" Margin="10,0,0,0">
            <TextBlock DockPanel.Dock="Top" 
                       Text="Unterkategorien verwalten" 
                       Style="{StaticResource HeaderTextStyle}"
                       FontSize="16"/>

            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                <TextBlock Text="Zugehörige Hauptkategorie:" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Kategorien}"
                          SelectedItem="{Binding SelectedKategorieForSub}"
                          DisplayMemberPath="Name"
                          ToolTip="Wählen Sie die Hauptkategorie für die neue Unterkategorie."/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,10,0,0">
                <TextBox Text="{Binding NewUnterkategorieName, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource BaseTextBoxStyle}"
                         Width="200" Margin="0,0,10,0"
                         ToolTip="Name der neuen Unterkategorie"/>
                <Button Content="Hinzufügen" 
                        Command="{Binding AddUnterkategorieCommand}" 
                        Style="{StaticResource AccentButton}"
                        Width="100" Margin="0,0,5,0"/>
                <Button Content="Löschen" 
                        Command="{Binding DeleteUnterkategorieCommand}" 
                        Style="{StaticResource SecondaryButton}"
                        Width="100"/>
            </StackPanel>

            <ListView ItemsSource="{Binding FilteredUnterkategorien}" 
                      SelectedItem="{Binding SelectedUnterkategorie}" 
                      AlternationCount="2">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#EEEEEE"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F8F8F8"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E0F0FF"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding WerkzeugKategorieID}" Width="50"/>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="250"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </Grid>
</UserControl>