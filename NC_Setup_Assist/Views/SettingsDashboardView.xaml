<UserControl x:Class="NC_Setup_Assist.Views.SettingsDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:NC_Setup_Assist.Views"
             xmlns:vm="clr-namespace:NC_Setup_Assist.ViewModels"
             mc:Ignorable="d">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Einstellungen" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Margin="0,0,0,30" 
                       HorizontalAlignment="Center"
                       Foreground="#333333"/>

            <UniformGrid Columns="3" 
                         Rows="1" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center" 
                         Width="650"
                         Height="150">

                <Button Command="{Binding OpenToolManagementCommand}" 
                        Style="{StaticResource ModernTileButton}" 
                        Margin="10"
                        ToolTip="Werkzeugdatenbank verwalten (Werkzeuge, Kategorien).">
                    <StackPanel>
                        <TextBlock Text="&#x2692;" 
                                   FontSize="32" 
                                   Margin="0,0,0,10" 
                                   HorizontalAlignment="Center"
                                   Foreground="#007ACC"/>
                        <TextBlock Text ="Werkzeuge" 
                                   HorizontalAlignment="Center" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding OpenMachineManagementCommand}" 
                        Style="{StaticResource ModernTileButton}" 
                        Margin="10"
                        ToolTip="Maschinen und deren Standardwerkzeuge verwalten.">
                    <StackPanel>
                        <TextBlock Text="&#x25B2;" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" 
                                   HorizontalAlignment="Center"
                                   Foreground="#007ACC"/>
                        <TextBlock Text ="Maschinen" 
                                   HorizontalAlignment="Center" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding OpenStandortManagementCommand}" 
                        Style="{StaticResource ModernTileButton}" 
                        Margin="10"
                        ToolTip="Standorte und deren Adressinformationen verwalten.">
                    <StackPanel>
                        <TextBlock Text="&#x2302;" 
                                   FontSize="32" 
                                   Margin="0,0,0,10" 
                                   HorizontalAlignment="Center"
                                   Foreground="#007ACC"/>
                        <TextBlock Text ="Standorte" 
                                   HorizontalAlignment="Center" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
        </StackPanel>
    </Grid>
</UserControl>