<Window x:Class="NC_Setup_Assist.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NC_Setup_Assist"
        xmlns:views="clr-namespace:NC_Setup_Assist.Views"
        xmlns:viewmodels="clr-namespace:NC_Setup_Assist.ViewModels"
        mc:Ignorable="d"
        Title="NC-Setup-Assist" Height="600" Width="900" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>

        <DataTemplate DataType="{x:Type viewmodels:MainMenuViewModel}">
            <views:MainMenuView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:SettingsDashboardViewModel}">
            <views:SettingsDashboardView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:ToolManagementViewModel}">
            <views:ToolManagementView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:NewProjectViewModel}">
            <views:NewProjectView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:AnalysisViewModel}">
            <views:AnalysisView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:MachineManagementViewModel}">
            <views:MachineManagementView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:AddMachineViewModel}">
            <views:AddMachineView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:HerstellerManagementViewModel}">
            <views:HerstellerManagementView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:StandardToolsManagementViewModel}">
            <views:StandardToolsManagementView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:StandortManagementViewModel}">
            <views:StandortManagementView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" Content="{Binding CurrentViewModel}" Margin="10"/>

        <Button Grid.Row="1" Content="Zurück" Command="{Binding NavigateBackCommand}" HorizontalAlignment="Right" Margin="10" Width="100"/>
    </Grid>
</Window>