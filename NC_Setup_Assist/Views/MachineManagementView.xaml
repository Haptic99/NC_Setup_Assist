<UserControl x:Class="NC_Setup_Assist.Views.MachineManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NC_Setup_Assist.Views"
             xmlns:conv="clr-namespace:NC_Setup_Assist.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>

        <Style x:Key="SmallAddButton" TargetType="{x:Type Button}" BasedOn="{StaticResource AccentButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Margin="0,0,10,0">

            <TextBlock DockPanel.Dock="Top" 
                       Text="Maschinenverwaltung" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"
                       Foreground="#333333"/>

            <ListView ItemsSource="{Binding FilteredMaschinen}"
                      SelectedItem="{Binding SelectedMaschine, Mode=TwoWay}"
                      AlternationCount="2">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding EditMachineCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#EEEEEE"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F8F8F8"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E0F0FF"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Hersteller" DisplayMemberBinding="{Binding Hersteller.Name}" Width="120"/>
                        <GridViewColumn Header="Standort" DisplayMemberBinding="{Binding ZugehoerigerStandort.Name}" Width="150"/>
                        <GridViewColumn Header="Stationen" DisplayMemberBinding="{Binding AnzahlStationen}" Width="70"/>
                        <GridViewColumn Header="Seriennummer" DisplayMemberBinding="{Binding Seriennummer}" Width="120"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <Grid Grid.Column="1">

            <StackPanel Visibility="{Binding IsInEditMode, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Maschine bearbeiten" Style="{StaticResource HeaderTextStyle}"/>

                <TextBlock Text="Maschinenname:" Margin="0,5,0,0"/>
                <TextBox Text="{Binding EditingMaschine.Name, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource BaseTextBoxStyle}" Margin="0,0,0,5"/>

                <TextBlock Text="Seriennummer:" Margin="0,5,0,0"/>
                <TextBox Text="{Binding EditingMaschine.Seriennummer, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource BaseTextBoxStyle}" Margin="0,0,0,5"/>

                <TextBlock Text="Hersteller:" Margin="0,5,0,0"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0" ItemsSource="{Binding Hersteller}"
                              SelectedItem="{Binding EditingMaschine.Hersteller}"
                              DisplayMemberPath="Name"
                              Margin="0,0,5,5"/>
                    <Button Grid.Column="1" Content="+" 
                            Command="{Binding AddHerstellerCommand}" 
                            Style="{StaticResource SmallAddButton}"
                            ToolTip="Neuen Hersteller hinzufügen"/>
                </Grid>

                <TextBlock Text="Standort:" Margin="0,5,0,0"/>
                <ComboBox ItemsSource="{Binding Standorte}"
                          SelectedItem="{Binding EditingMaschine.ZugehoerigerStandort}"
                          DisplayMemberPath="Name"
                          Margin="0,0,0,10"/>

                <Button Content="Standardwerkzeuge verwalten"
                        Command="{Binding ManageStandardToolsCommand}"
                        ToolTip="Hier klicken, um die auf dieser Maschine fest zugewiesenen Werkzeuge zu bearbeiten."
                        Style="{StaticResource AccentButton}"
                        Width="200"
                        HorizontalAlignment="Left"
                        Margin="0,15,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Speichern" Command="{Binding SaveMachineCommand}" Width="100" IsDefault="True" Style="{StaticResource AccentButton}"/>
                    <Button Content="Abbrechen" Command="{Binding CancelCommand}" Width="100" IsCancel="True" Style="{StaticResource SecondaryButton}" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel VerticalAlignment="Top"
                        Visibility="{Binding IsInEditMode, Converter={StaticResource InverseBoolToVis}}">

                <TextBlock Text="Aktionen" FontWeight="Bold" Margin="0,0,0,10" FontSize="16" Foreground="#333333"/>

                <TextBlock Text="Maschine suchen:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource BaseTextBoxStyle}"
                         Margin="0,0,0,15"
                         Width="200"
                         HorizontalAlignment="Left"
                         ToolTip="Suche nach Name, Hersteller oder Seriennummer"/>

                <Button Content="Neue Maschine anlegen" Command="{Binding NewMachineCommand}" Width="200" HorizontalAlignment="Left" Style="{StaticResource AccentButton}" Margin="0,0,0,5"/>
                <Button Content="Maschine bearbeiten" Command="{Binding EditMachineCommand}" Width="200" HorizontalAlignment="Left" Style="{StaticResource SecondaryButton}" Margin="0,10,0,5"/>
                <Button Content="Maschine löschen" Command="{Binding DeleteMachineCommand}" Width="200" HorizontalAlignment="Left" Style="{StaticResource SecondaryButton}" Margin="0,15,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>