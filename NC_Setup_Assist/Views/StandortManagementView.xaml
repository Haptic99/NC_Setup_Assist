<UserControl x:Class="NC_Setup_Assist.Views.StandortManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NC_Setup_Assist.Views"
             xmlns:conv="clr-namespace:NC_Setup_Assist.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Margin="0,0,10,0"
                   Visibility="{Binding IsInEditMode, Converter={StaticResource InverseBoolToVis}}">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Neu" Command="{Binding NewStandortCommand}" Width="100" Margin="0,0,5,0"/>
                <Button Content="Löschen" Command="{Binding DeleteStandortCommand}" Width="100"/>
            </StackPanel>

            <ListView ItemsSource="{Binding Standorte}"
                      SelectedItem="{Binding SelectedStandort, Mode=TwoWay}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding EditStandortCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                        <GridViewColumn Header="Stadt" DisplayMemberBinding="{Binding Stadt}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <StackPanel Grid.Column="1"
                    Visibility="{Binding IsInEditMode, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="Standort bearbeiten" FontWeight="Bold" Margin="0,0,0,10" FontSize="16"/>

            <TextBlock Text="Name des Standorts:"/>
            <TextBox Text="{Binding EditingStandort.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Strasse &amp; Nr.:"/>
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding EditingStandort.Strasse, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0"/>
                <TextBox Grid.Column="1" Text="{Binding EditingStandort.Hausnummer, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
            </Grid>

            <TextBlock Text="PLZ &amp; Ort:"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding EditingStandort.PLZ, UpdateSourceTrigger=PropertyChanged}" Width="60" Margin="0,0,5,0"/>
                <TextBox Grid.Column="1" Text="{Binding EditingStandort.Stadt, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>

            <TextBlock Text="Maschinen an diesem Standort:" Margin="0,10,0,5" FontWeight="SemiBold"/>
            <ListView ItemsSource="{Binding EditingStandort.Maschinen}" Height="120" Margin="0,0,0,10" IsHitTestVisible="False">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Maschinenname" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Speichern" Command="{Binding SaveStandortCommand}" Width="100" Margin="0,0,5,0" IsDefault="True"/>
                <Button Content="Abbrechen" Command="{Binding CancelCommand}" Width="100" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>