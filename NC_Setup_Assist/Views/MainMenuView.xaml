<UserControl x:Class="NC_Setup_Assist.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:NC_Setup_Assist.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="ModernTileButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="BorderBrush" Value="#666666"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

            <TextBlock Text="NC-Setup-Assist" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Margin="0,0,0,30" 
                       HorizontalAlignment="Center"
                       Foreground="#333333"/>

            <UniformGrid Columns="3" 
                         Rows="1" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center" 
                         Width="650"
                         Height="150">

                <Button Command="{Binding CreateNewProjectCommand}" 
                        Style="{StaticResource ModernTileButton}"
                        Margin="10" 
                        ToolTip="Ein neues Projekt mit NC-Code starten.">
                    <StackPanel>
                        <TextBlock Text="&#x25A0;"  
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" 
                                   HorizontalAlignment="Center"
                                   Foreground="#007ACC"/>
                        <TextBlock Text="Neues Projekt" 
                                   HorizontalAlignment="Center" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding ManageProjectsCommand}" 
                        Style="{StaticResource ModernTileButton}"
                        Margin="10" 
                        ToolTip="Bestehende Projekte ansehen und bearbeiten.">
                    <StackPanel>
                        <TextBlock Text="&#x1F4C1;" 
                                   FontSize="32" 
                                   Margin="0,0,0,10" 
                                   HorizontalAlignment="Center"
                                   Foreground="#007ACC"/>
                        <TextBlock Text="Projekte verwalten" 
                                   HorizontalAlignment="Center" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding OpenSettingsCommand}" 
                        Style="{StaticResource ModernTileButton}"
                        Margin="10" 
                        ToolTip="Einstellungen für Werkzeuge und Maschinen.">
                    <StackPanel>
                        <TextBlock Text="&#x2699;" 
                                   FontSize="32" 
                                   Margin="0,0,0,10" 
                                   HorizontalAlignment="Center"
                                   Foreground="#007ACC"/>
                        <TextBlock Text="Einstellungen" 
                                   HorizontalAlignment="Center" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
        </StackPanel>
    </Grid>
</UserControl>