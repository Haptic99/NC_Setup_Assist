<Window x:Class="NC_Setup_Assist.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NC_Setup_Assist"
        xmlns:views="clr-namespace:NC_Setup_Assist.Views"
        xmlns:viewmodels="clr-namespace:NC_Setup_Assist.ViewModels"
        xmlns:converters="clr-namespace:NC_Setup_Assist.Converters"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="NC-Setup-Assist"
        Icon="/Logo.ico"
        WindowState="Maximized"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:MainMenuViewModel}">
            <views:MainMenuView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SettingsDashboardViewModel}">
            <views:SettingsDashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ToolManagementViewModel}">
            <views:ToolManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:NewProjectViewModel}">
            <views:NewProjectView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AnalysisViewModel}">
            <views:AnalysisView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:MachineManagementViewModel}">
            <views:MachineManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AddMachineViewModel}">
            <views:AddMachineView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:HerstellerManagementViewModel}">
            <views:HerstellerManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:KategorieManagementViewModel}">
            <views:KategorieManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:UnterkategorieManagementViewModel}">
            <views:UnterkategorieManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:StandardToolsManagementViewModel}">
            <views:StandardToolsManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:StandortManagementViewModel}">
            <views:StandortManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ToolAssignmentComparisonViewModel}">
            <views:ToolAssignmentComparisonView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ProjectManagementViewModel}">
            <views:ProjectManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AboutViewModel}">
            <views:AboutView/>
        </DataTemplate>

        <converters:StringEqualsConverter x:Key="StringEqualsConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" 
                Width="280"
                Background="{DynamicResource PrimaryHueMidBrush}" 
                TextElement.Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                Visibility="{Binding IsSidebarVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <DockPanel>
                <!-- Header -->
                <StackPanel DockPanel.Dock="Top" Margin="24">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Factory" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="NC-Assist" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Setup &amp; Tool Management" Opacity="0.8" FontSize="14"/>
                </StackPanel>

                <!-- Bottom Actions -->
                <StackPanel DockPanel.Dock="Bottom" Margin="16">
                    <Button Command="{Binding NavigateBackCommand}" 
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            BorderBrush="{DynamicResource PrimaryHueMidForegroundBrush}"
                            Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                            Content="Zurück"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="12">
                        <RadioButton Style="{StaticResource MaterialDesignChoiceChipRadioButton}"
                                     Command="{Binding NavigateDashboardCommand}"
                                     IsChecked="{Binding ActiveViewName, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Dashboard'}"
                                     Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" Margin="0,0,16,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource MaterialDesignChoiceChipRadioButton}"
                                     Command="{Binding NavigateProjectsCommand}"
                                     IsChecked="{Binding ActiveViewName, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Projects'}"
                                     Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Folder" Margin="0,0,16,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Projekte" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource MaterialDesignChoiceChipRadioButton}"
                                     Command="{Binding NavigateSettingsCommand}"
                                     IsChecked="{Binding ActiveViewName, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Settings'}"
                                     Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" Margin="0,0,16,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Einstellungen" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <materialDesign:Transitioner Grid.Column="1" SelectedIndex="0" AutoApplyTransitionOrigins="True">
            <materialDesign:TransitionerSlide>
                <materialDesign:TransitionerSlide.OpeningEffect>
                    <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.4"/>
                </materialDesign:TransitionerSlide.OpeningEffect>
                <!-- REMOVED Margin="24" to allow full bleed for Main Menu -->
                <ContentControl Content="{Binding CurrentViewModel}"/>
            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>
    </Grid>
</Window>