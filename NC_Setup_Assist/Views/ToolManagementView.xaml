<UserControl x:Class="NC_Setup_Assist.Views.ToolManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NC_Setup_Assist.Views"
             xmlns:vm="clr-namespace:NC_Setup_Assist.ViewModels"
             xmlns:conv="clr-namespace:NC_Setup_Assist.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>

        <Style x:Key="SearchTextBoxStyle" TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseTextBoxStyle}">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F9F9F9"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock DockPanel.Dock="Top" 
                       Text="Werkzeugdatenbank" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"
                       Foreground="#333333"/>

            <ListView ItemsSource="{Binding FilteredWerkzeuge}"
                      SelectedItem="{Binding SelectedTool, Mode=TwoWay}"
                      IsEnabled="{Binding IsInEditMode, 
                                          Converter={StaticResource InverseBoolToVis}}"
                      AlternationCount="2">

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding EditToolCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#EEEEEE"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F8F8F8"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E0F0FF"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding WerkzeugID}" Width="50"/>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Typ" DisplayMemberBinding="{Binding Unterkategorie.Name}" Width="150"/>
                        <GridViewColumn Header="Beschreibung" DisplayMemberBinding="{Binding Beschreibung}" Width="Auto"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <Grid Grid.Column="1" Visibility="{Binding IsSelectionMode, Converter={StaticResource InverseBoolToVis}}">

            <StackPanel Visibility="{Binding IsInEditMode, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Werkzeug bearbeiten" Style="{StaticResource HeaderTextStyle}"/>

                <TextBlock Text="Name:" Margin="0,5,0,0"/>
                <TextBox Text="{Binding EditingTool.Name, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource BaseTextBoxStyle}" Margin="0,0,0,5"/>

                <TextBlock Text="Kategorie:" Margin="0,5,0,0"/>
                <ComboBox Margin="0,0,0,5"
                          ItemsSource="{Binding Kategorien}"
                          SelectedItem="{Binding SelectedKategorie}"
                          DisplayMemberPath="Name"/>

                <TextBlock Text="Unterkategorie / Typ:" Margin="0,5,0,0"/>
                <ComboBox Margin="0,0,0,5"
                          ItemsSource="{Binding Unterkategorien}"
                          SelectedItem="{Binding SelectedUnterkategorie}" 
                          DisplayMemberPath="Name"/>

                <StackPanel Visibility="{Binding IsPitchRequired, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Steigung" Margin="0,5,0,0"/>
                    <TextBox Text="{Binding PitchInputString, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource BaseTextBoxStyle}"
                             Margin="0,0,0,5" 
                             ToolTip="Nur für Gewindedrehstähle erforderlich. Erlaubt Dezimalzahlen mit Komma oder Punkt."/>
                </StackPanel>

                <TextBlock Text="Beschreibung:" Margin="0,5,0,0"/>
                <TextBox Text="{Binding EditingTool.Beschreibung, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource BaseTextBoxStyle}"
                         Height="80" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Speichern" Command="{Binding SaveToolCommand}" Style="{StaticResource AccentButton}" Width="100"/>
                    <Button Content="Abbrechen" Command="{Binding CancelCommand}" Style="{StaticResource SecondaryButton}" Width="100" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel VerticalAlignment="Top"
                        Visibility="{Binding IsInEditMode, Converter={StaticResource InverseBoolToVis}}">

                <TextBlock Text="Aktionen" FontWeight="Bold" Margin="0,0,0,10" FontSize="16" Foreground="#333333"/>

                <TextBlock Text="Werkzeug suchen:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource BaseTextBoxStyle}"
                         Margin="0,0,0,15"
                         Width="200"
                         HorizontalAlignment="Left"
                         ToolTip="Suche nach Name, Typ oder Beschreibung"/>

                <Button Content="Werkzeug auswählen" Command="{Binding EditToolCommand}" 
                        Style="{StaticResource AccentButton}" 
                        Width="200" 
                        HorizontalAlignment="Left" 
                        Visibility="{Binding IsSelectionMode, Converter={StaticResource BoolToVis}}"/>

                <StackPanel Visibility="{Binding IsSelectionMode, Converter={StaticResource InverseBoolToVis}}">
                    <Button Content="Neues Werkzeug anlegen" Command="{Binding NewToolCommand}" 
                            Width="200" HorizontalAlignment="Left" Style="{StaticResource AccentButton}" Margin="0,0,0,5"/>
                    <Button Content="Werkzeug bearbeiten" Command="{Binding EditToolCommand}" 
                            Width="200" HorizontalAlignment="Left" Style="{StaticResource SecondaryButton}" Margin="0,10,0,5"/>
                    <Button Content="Werkzeug löschen" Command="{Binding DeleteToolCommand}" 
                            Width="200" HorizontalAlignment="Left" Style="{StaticResource SecondaryButton}" Margin="0,15,0,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>