<UserControl x:Class="NC_Setup_Assist.Views.UnterkategorieManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NC_Setup_Assist.Views"
             xmlns:conv="clr-namespace:NC_Setup_Assist.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock DockPanel.Dock="Top" 
                       Text="Unterkategorien" 
                       Style="{StaticResource HeaderTextStyle}"
                       FontSize="16"/>

            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                <TextBlock Text="Filter nach Hauptkategorie:" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Kategorien}"
                          SelectedItem="{Binding SelectedKategorieFilter}"
                          DisplayMemberPath="Name"
                          ToolTip="Filtern Sie die Liste nach Hauptkategorie."/>
            </StackPanel>

            <ListView ItemsSource="{Binding FilteredUnterkategorien}" 
                      SelectedItem="{Binding SelectedUnterkategorie, Mode=TwoWay}" 
                      AlternationCount="2"
                      IsEnabled="{Binding IsInEditMode, Converter={StaticResource InverseBoolToVis}}"
                      x:Name="UnterkategorieListView">

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding EditUnterkategorieCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#EEEEEE"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#F8F8F8"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E0F0FF"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                        <GridViewColumn Header="Steigung?" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding BenötigtSteigung}" IsHitTestVisible="False" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Winkel?" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding BenötigtPlattenwinkel}" IsHitTestVisible="False" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <Grid Grid.Column="1">
            <StackPanel Visibility="{Binding IsInEditMode, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Unterkategorie bearbeiten" Style="{StaticResource HeaderTextStyle}"/>

                <TextBlock Text="Name:" Margin="0,5,0,0"/>
                <TextBox Text="{Binding EditingUnterkategorie.Name, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource BaseTextBoxStyle}" Margin="0,0,0,5"/>

                <TextBlock Text="Zugehörige Hauptkategorie:" Margin="0,5,0,0"/>
                <ComboBox ItemsSource="{Binding Kategorien}"
                          SelectedItem="{Binding EditingUnterkategorie.Kategorie}"
                          DisplayMemberPath="Name"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Benötigte Eigenschaften:" Margin="0,10,0,5" FontWeight="SemiBold"/>
                <CheckBox IsChecked="{Binding EditingUnterkategorie.BenötigtSteigung}"
                          Content="Steigung (P=)"
                          Margin="0,0,0,5"/>
                <CheckBox IsChecked="{Binding EditingUnterkategorie.BenötigtPlattenwinkel}"
                          Content="Plattenwinkel (°)"
                          Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Speichern" Command="{Binding SaveUnterkategorieCommand}" Width="100" IsDefault="True" Style="{StaticResource AccentButton}"/>
                    <Button Content="Abbrechen" Command="{Binding CancelCommand}" Width="100" IsCancel="True" Style="{StaticResource SecondaryButton}" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel VerticalAlignment="Top"
                        Visibility="{Binding IsInEditMode, Converter={StaticResource InverseBoolToVis}}">
                <TextBlock Text="Aktionen" FontWeight="Bold" Margin="0,0,0,10" FontSize="16" Foreground="#333333"/>

                <Button Content="Neue Unterkategorie" Command="{Binding NewUnterkategorieCommand}" 
                        Width="200" HorizontalAlignment="Left" Style="{StaticResource AccentButton}" Margin="0,0,0,5"/>
                <Button Content="Unterkategorie bearbeiten" Command="{Binding EditUnterkategorieCommand}" 
                        Width="200" HorizontalAlignment="Left" Style="{StaticResource SecondaryButton}" Margin="0,10,0,5"/>
                <Button Content="Unterkategorie löschen" Command="{Binding DeleteUnterkategorieCommand}" 
                        Width="200" HorizontalAlignment="Left" Style="{StaticResource SecondaryButton}" Margin="0,15,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>