<UserControl x:Class="NC_Setup_Assist.Views.AddMachineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NC_Setup_Assist.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Center" VerticalAlignment="Center">

    <StackPanel Width="400">
        <TextBlock Text="Neue Maschine hinzufügen" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   Foreground="#333333"/>

        <TextBlock Text="Hersteller:" Margin="0,10,0,5"/>
        <ComboBox ItemsSource="{Binding Hersteller}"
                  SelectedItem="{Binding SelectedHersteller}"
                  DisplayMemberPath="Name"
                  Margin="0,0,0,10"
                  ToolTip="Wählen Sie den Hersteller aus."/>

        <TextBlock Text="Maschinenname:" Margin="0,10,0,5"/>
        <TextBox Text="{Binding NewMachine.Name, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource BaseTextBoxStyle}"/>

        <TextBlock Text="Seriennummer:" Margin="0,10,0,5"/>
        <TextBox Text="{Binding NewMachine.Seriennummer, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource BaseTextBoxStyle}"/>

        <TextBlock Text="Standort:" Margin="0,10,0,5"/>
        <ComboBox ItemsSource="{Binding Standorte}"
                  SelectedItem="{Binding SelectedStandort}"
                  DisplayMemberPath="Name"
                  Margin="0,0,0,20"
                  ToolTip="Wählen Sie einen Standort aus."/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Speichern" 
                    Command="{Binding SaveMachineCommand}" 
                    Style="{StaticResource AccentButton}"
                    IsDefault="True"
                    Width="100" Margin="0,0,10,0"/>
            <Button Content="Abbrechen" 
                    Command="{Binding CancelCommand}" 
                    Style="{StaticResource SecondaryButton}"
                    IsCancel="True"
                    Width="100"/>
        </StackPanel>
    </StackPanel>
</UserControl>