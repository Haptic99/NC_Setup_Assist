<UserControl x:Class="NC_Setup_Assist.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:viewmodels="clr-namespace:NC_Setup_Assist.ViewModels">


    <UserControl.Resources>
        <Style x:Key="TileDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>

            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

            <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center">

                <TextBlock Text="NC-Setup-Assist" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
      
                     Foreground="#333333"/>
                <TextBlock Text="NC Machine Setup Assistant"
                           FontSize="18"
                           HorizontalAlignment="Center"
     
                      Foreground="#444444"/>
            </StackPanel>

            <UniformGrid Columns="3" 
                         Rows="1" 
                         HorizontalAlignment="Center" 

                         VerticalAlignment="Center" 
                         Width="650"
                         Height="180">

                <Button Command="{Binding CreateNewProjectCommand}" 
     
                   Style="{StaticResource ModernTileButton}"
                        Margin="10" 
                        ToolTip="Ein neues Projekt mit NC-Code starten.">
                    <StackPanel>

                        <TextBlock Text="&#xE7C3;"
Style="{StaticResource TileIconStyle}"/>
                        <TextBlock Text="Neues Projekt" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding ManageProjectsCommand}" 
                
        Style="{StaticResource ModernTileButton}"
                        Margin="10" 
                        ToolTip="Bestehende Projekte ansehen und bearbeiten.">
                    <StackPanel>

                        <TextBlock Text="&#xE8B7;" Style="{StaticResource TileIconStyle}"/>
                        <TextBlock Text="Projekte verwalten" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding OpenSettingsCommand}" 
        
                Style="{StaticResource ModernTileButton}"
                        Margin="10" 
                        ToolTip="Einstellungen für Werkzeuge und Maschinen.">
                    <StackPanel>

                        <TextBlock Text="&#xE713;"
Style="{StaticResource TileIconStyle}"/>
                        <TextBlock Text="Einstellungen" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </UniformGrid>

            <Button Command="{Binding OpenAboutCommand}" 
         
           Style="{StaticResource SecondaryButton}" 
                    HorizontalAlignment="Center"
                    Width="100"
                    Margin="0,30,0,0">
                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="&#xE946;"
FontFamily="Segoe MDL2 Assets" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Über"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>