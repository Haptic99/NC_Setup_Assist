<UserControl x:Class="NC_Setup_Assist.Views.StandardToolsManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NC_Setup_Assist.Views"
             xmlns:vm="clr-namespace:NC_Setup_Assist.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="SmallRemoveButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#555555"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Standardwerkzeuge bearbeiten" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"
                   Foreground="#333333"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Anzahl Stationen:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding StationOptions}"
                      SelectedItem="{Binding SelectedAnzahlStationen}"
                      IsEnabled="{Binding IsAnzahlStationenChangeable}"
                      Width="100"
                      ToolTip="Die Anzahl kann nur geändert werden, solange keine Werkzeuge zugewiesen sind."/>
        </StackPanel>

        <ListView Grid.Row="2" 
                  ItemsSource="{Binding ToolAssignments}" 
                  AlternationCount="2"
                  x:Name="StandardToolsListView">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#EEEEEE"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#F8F8F8"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#E0F0FF"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction 
                        Command="{Binding DataContext.ChooseToolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding ElementName=StandardToolsListView, Path=SelectedItem}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Station" DisplayMemberBinding="{Binding Station}" Width="80"/>
                    <GridViewColumn Header="Werkzeug" DisplayMemberBinding="{Binding SelectedWerkzeug.Name}" Width="400"/>
                    <GridViewColumn Header="Typ" DisplayMemberBinding="{Binding SelectedWerkzeug.Unterkategorie.Name}" Width="200"/>

                    <GridViewColumn Header="Löschen" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="X" 
                                        Command="{Binding ClearToolCommand}" 
                                        Style="{StaticResource SmallRemoveButton}"
                                        HorizontalAlignment="Center"
                                        ToolTip="Zugewiesenes Werkzeug entfernen"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Speichern" 
                    Command="{Binding SaveCommand}" 
                    Style="{StaticResource AccentButton}"
                    Width="100" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="Abbrechen" 
                    Command="{Binding CancelCommand}" 
                    Style="{StaticResource SecondaryButton}"
                    Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</UserControl>